// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  PUPPY
  YOUNG
  ADULT
  OLD
}

enum Size {
  SMALL
  MEDIUM
  BIG
}

enum Energy {
  LOW
  MEDIUM
  HIGH
}

enum Independence {
  LOW
  MEDIUM
  HIGH
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String
  cep           String
  city          String
  address       String
  whatsapp      String
  password_hash String
  created_at    DateTime @default(now())
  Pet           Pet[]
}

model Pet {
  id           String       @id @default(uuid())
  name         String
  about        String
  age          Age          @default(PUPPY)
  size         Size         @default(SMALL)
  energy       Energy       @default(LOW)
  independence Independence @default(LOW)
  requirement  String
  isAdopted    Boolean      @default(false)

  organization    Organization @relation(fields: [organization_id], references: [id])
  organization_id String
}
